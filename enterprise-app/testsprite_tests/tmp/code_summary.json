  "features": [
    {
      "name": "Authentication",
      "description": "User login and logout functionality",
      "files": [
        "app/Http/Controllers/Hr/AuthController.php"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {
          "title": "Authentication API",
          "version": "1.0.0"
        },
        "paths": {
          "/login": {
            "post": {
              "summary": "Login user",
              "responses": {
                "200": {
                  "description": "Successful login"
                }
              }
            }
          },
          "/logout": {
            "post": {
              "summary": "Logout user",
              "responses": {
                "200": {
                  "description": "Successful logout"
                }
              }
            }
          },
          "/user": {
            "get": {
              "summary": "Get authenticated user info",
              "responses": {
                "200": {
                  "description": "User details"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Employee Management",
      "description": "Manage employees (List, Create, Update, Delete)",
      "files": [
        "app/Http/Controllers/Hr/EmployeeController.php"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {
          "title": "Employee API",
          "version": "1.0.0"
        },
        "paths": {
          "/employees": {
            "get": {
              "summary": "List employees",
              "responses": {
                "200": {
                  "description": "List of employees"
                }
              }
            },
            "post": {
              "summary": "Create new employee",
              "responses": {
                "201": {
                  "description": "Employee created"
                }
              }
            }
          },
          "/employees/{id}": {
            "get": {
              "summary": "Get employee details",
              "parameters": [
                {
                  "name": "id",
                  "in": "path",
                  "required": true,
                  "schema": {
                    "type": "integer"
                  }
                }
              ],
              "responses": {
                "200": {
                  "description": "Employee details"
                }
              }
            },
            "put": {
              "summary": "Update employee",
              "parameters": [
                {
                  "name": "id",
                  "in": "path",
                  "required": true,
                  "schema": {
                    "type": "integer"
                  }
                }
              ],
              "responses": {
                "200": {
                  "description": "Employee updated"
                }
              }
            },
            "delete": {
              "summary": "Delete employee",
              "parameters": [
                {
                  "name": "id",
                  "in": "path",
                  "required": true,
                  "schema": {
                    "type": "integer"
                  }
                }
              ],
              "responses": {
                "200": {
                  "description": "Employee deleted"
                }
              }
            }
          }
        }
      }
    },
